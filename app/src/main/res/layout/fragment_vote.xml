<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".voting_reviewing_questions.Vote">
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Option1"
    android:id="@+id/option1"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="58dp"
    android:layout_marginStart="58dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Option2"
    android:id="@+id/option2"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginRight="43dp"
    android:layout_marginEnd="43dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Large Text"
    android:id="@+id/option1Text"
    android:layout_below="@+id/option1"
    android:layout_alignRight="@+id/option1"
    android:layout_alignEnd="@+id/option1" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"

    android:id="@+id/option2Text"
    android:layout_alignTop="@+id/option1Text"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/option1Image"
    android:layout_below="@+id/option1Text"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/option2Image"
    android:layout_below="@+id/option1Image"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Medium Text"
    android:id="@+id/option1Comment"
    android:layout_alignParentBottom="true"
    android:layout_alignRight="@+id/option1Text"
    android:layout_alignEnd="@+id/option1Text"
    android:layout_marginBottom="148dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Medium Text"
    android:id="@+id/option2Comment"
    android:layout_alignTop="@+id/Option1Comment"
    android:layout_alignRight="@+id/option2Text"
    android:layout_alignEnd="@+id/option2Text" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Vote Option1"
    android:id="@+id/voteOption1"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Vote option2"
    android:id="@+id/voteOption2"
    android:layout_alignTop="@+id/voteOption1"
    android:layout_alignRight="@+id/option2Image"
    android:layout_alignEnd="@+id/option2Image" />


</RelativeLayout>
